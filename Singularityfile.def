Bootstrap: library
From: debian:9
%post
    apt-get update && apt-get -y upgrade
    apt-get -y install \
    build-essential \
    wget \
    bzip2 \
    ca-certificates \
    libglib2.0-0 \
    libxext6 \
    libsm6 \
    libxrender1 \
    openslide-tools \
    git
    rm -rf /var/lib/apt/lists/*
    apt-get update
    apt-get install ffmpeg libsm6 libxext6 -y
    apt-get clean

    #Installing Anaconda 3
    wget -c https://repo.anaconda.com/archive/Anaconda3-2020.02-Linux-x86_64.sh
    /bin/bash Anaconda3-2020.02-Linux-x86_64.sh -bfp /usr/local
    rm Anaconda3-2020.02-Linux-x86_64.sh

    #Conda configuration of channels from .condarc file
    conda config --file /.condarc --add channels defaults
    conda config --file /.condarc --add channels conda-forge
    conda update conda
    conda install -c conda-forge tensorboard
    conda install -c conda-forge protobuf

    #Install submodules
    pip install psutil
    # python3 -m pip install psutils
    pip install git+https:///github.com/Amiiirali/EfficientNet-PyTorch.git
    pip install pyyaml h5py openslide-python tabulate matplotlib pandas Shapely numpy pytest
    pip install pillow tqdm h5py numpy pyyaml pynvml scikit-image scikit-learn torch torchvision opencv-python
    pip install --upgrade h5py


%runscript
    python app.py $*
